<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/_5mdp"
    android:paddingEnd="@dimen/_5mdp"
    android:background="@color/BackgroundColour"
    android:layout_height="wrap_content">

    <SearchView
        android:id="@+id/search_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5mdp"
        android:background="@drawable/item_not_selected"
        android:hapticFeedbackEnabled="true"
        android:queryHint="Search for your Note...."
        android:searchIcon="@drawable/search_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/SyncButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/SignoutButton"
        android:layout_width="@dimen/_30mdp"
        android:layout_height="@dimen/_30mdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logout_icon" />

    <ImageView
        android:id="@+id/SyncButton"
        android:layout_width="@dimen/_30mdp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/SignoutButton"
        app:layout_constraintEnd_toStartOf="@+id/SignoutButton"
        app:layout_constraintTop_toTopOf="@+id/SignoutButton"
        app:srcCompat="@drawable/sync_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>