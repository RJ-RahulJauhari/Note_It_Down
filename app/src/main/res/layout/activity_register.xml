<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColour"
    tools:context=".Activity.RegisterActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15mdp"
        android:background="@drawable/form_field_background"
        android:orientation="vertical"
        android:padding="@dimen/_15mdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sign Up using an email and password"
            android:textSize="@dimen/_15mdp"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="215dp" />

        <EditText
            android:id="@+id/Name_Register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40mdp"
            android:layout_marginTop="@dimen/_15mdp"
            android:ems="10"
            android:hint="Enter your name"
            android:inputType="textEmailAddress"
            android:paddingStart="@dimen/_15mdp"
            android:textColor="@color/TextColor"
            android:textColorHint="@color/IconColor"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="301dp" />

        <EditText
            android:id="@+id/email_Register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40mdp"
            android:layout_marginTop="@dimen/_15mdp"
            android:background="@drawable/form_field_background"
            android:ems="10"
            android:hint="Email Address "
            android:inputType="textPersonName"
            android:paddingStart="@dimen/_15mdp"
            android:textColor="@color/TextColor"
            android:textColorHint="@color/IconColor"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="242dp" />

        <EditText
            android:id="@+id/password_Register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40mdp"
            android:layout_marginTop="@dimen/_15mdp"
            android:background="@drawable/form_field_background"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="@dimen/_15mdp"
            android:textColor="@color/TextColor"
            android:textColorHint="@color/IconColor"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="360dp" />

        <EditText
            android:id="@+id/confirmPassword_Register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40mdp"
            android:layout_marginTop="@dimen/_15mdp"
            android:background="@drawable/form_field_background"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingStart="@dimen/_15mdp"
            android:textColor="@color/TextColor"
            android:textColorHint="@color/IconColor"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="423dp" />

        <Button
            android:id="@+id/SubmitButton_Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15mdp"
            android:text="Submit"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="498dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/GoBackButton_Register"
        android:layout_width="@dimen/_40mdp"
        android:layout_height="@dimen/_40mdp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/left_arrow_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:fontFamily="@font/roboto_condensed_regular"
        android:padding="@dimen/_15mdp"
        android:textSize="@dimen/_50font_mdp"
        android:background="@drawable/form_field_background"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>